<%= form_for @request do |f| %>
  <div class="row">
    <div class="col-sm-9">
      <br>
      <div class="form-group">
        <%= f.text_field :to, placeholder: "To", class: "form-control", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.text_field :recipients, placeholder: "Recipients", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_field :subject, placeholder: "Subject", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_area :body, placeholder: "Request", rows: 10, class:"form-control" %>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="form-group has-feedback">
        <%= f.label :opened %>
        <%= f.date_field :opened, class: "form-control" %>
        <i class="glyphicon glyphicon-calendar form-control-feedback"></i>
      </div>
      <div class="form-group has-feedback">
        <%= f.label :due %>
        <%= f.date_field :due, class: "form-control" %>
        <i class="glyphicon glyphicon-calendar form-control-feedback"></i>
      </div>
      <div class="form-group">
        <%= f.label :status %>
        <%= f.select :status, options_for_select(%w[Draft Open Closed Re-Opened Void]), {} , class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :priority %>
        <%= f.select :priority, options_for_select(%w[High Normal]), {} , class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :cost_impact %>
        <%= f.select :cost_impact, options_for_select(%w[Increase Unknown Decrease]), {} , class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :trade %>
        <%= f.select :trade, options_for_select(['Core & Shell', 'MEP', 'Interiors', 'Sitework']), {} , class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>

<% end %>

<%= form_for @request do |f| %>
  <div class="row">
    <div class="col-sm-9">
      <div class="form-group">
        <%= f.label :from %>
        <%= f.text_field :from, placeholder: "From", class: "form-control", value: current_user.full_name %>
      </div>
      <div class="form-group">
        <%= f.text_field :to, placeholder: "To", class: "form-control", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.text_field :subject, placeholder: "Subject", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_area :body, placeholder: "Request", rows: 10, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :filepicker_url, "Upload Attachments:" %>
        <%= f.filepicker_field :filepicker_url, multiple: true %>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="form-group has-feedback">
        <%= f.label :opened %>
        <%= f.date_field :opened, class: "form-control", value: Date.today %>
        <i class="glyphicon glyphicon-calendar form-control-feedback"></i>
      </div>
      <div class="form-group has-feedback">
        <%= f.label :due %>
        <%= f.date_field :due, class: "form-control", value: (Date.today + 14) %>
        <i class="glyphicon glyphicon-calendar form-control-feedback"></i>
      </div>
      <div class="form-group">
        <%= f.label :status %>
        <%= f.select :status, options_for_select(['Draft','Open','Closed','Re-Opened','Void','Field Impact'], @request.status), {} , class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :priority %>
        <%= f.select :priority, options_for_select(%w[High Normal], @request.priority), {} , class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :cost_impact %>
        <%= f.select :cost_impact, options_for_select(%w[Increase Unknown Decrease], @request.cost_impact), {} , class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :trade %>
        <%= f.select :trade, options_for_select(['Core & Shell', 'MEP', 'Interiors', 'Sitework'], @request.trade), {} , class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>

<% end %>

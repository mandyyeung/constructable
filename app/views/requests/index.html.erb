<% if @requests.count > 0 %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th>Subject</th>
        <th>Description</th>
        <th>Edit/Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @requests.each do |request| %>
        <tr>
          <th scope="row"><%= request.id %></th>
          <td><%= link_to request.subject, request_path(request) %></td>
          <td><%= request.body %></td>
          <td><%= link_to "Edit", edit_request_path(request) %> |
              <%= link_to "Delete", request_path(request), method: :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h1>No RFIs available</h1>
<% end %>
<%= link_to "New RFI", new_request_path, class:"btn btn-primary" %>

<%= form_for [@request, @response] do |f| %>
  <div class="form-group">
    <%= f.hidden_field :opened, value: Date.today %>
    <%= f.text_area :body, placeholder: " Post a response", rows: 5, class: "form-control", data: {provide: "markdown"} %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>

<div class="tabbable">
  <ul class="nav nav-tabs">
    <li role="presentation" class="active"><a href="#requests_form" data-toggle="tab">Comment</a></li>
    <li role="presentation"><a href="#comments_form" data-toggle="tab">RFI Response</a></li>
  </ul>
  <div class="tab-content">
    <div id="requests_form" class="tab-pane active">
      <%= form_for [@request, @response] do |f| %>
        <div class="form-group">
          <%= f.text_area :body, placeholder: " Post a response/comment", rows: 5, class: "form-control", data: {provide: "markdown"} %>
        </div>
        <div class="form-group">
          <% if !!@request.responses.find_by(primary: true) %>
            <%= f.check_box :primary, disabled: true %>
          <% else %>
            <%= f.check_box :primary, {}, "true", "false" %>
          <% end %>
          <%= f.label :primary, "Primary Response?" %>
        </div>
        <div class="form-group">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <div id="comments_form" class="tab-pane">
      <%= render 'requests/form' %>
    </div>
  </div>
</div>

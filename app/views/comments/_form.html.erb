<div class="tabbable">
  <ul class="nav nav-tabs">
    <li role="presentation" class="active"><a href="#comments_form" data-toggle="tab">Comment</a></li>
    <li role="presentation"><a href="#requests_form" data-toggle="tab">RFI Response</a></li>
  </ul>
  <div class="tab-content">
    <div id="comments_form" class="tab-pane active">
      <%= form_for [@request, @comment] do |f| %>
      <div class="form-group">
        <%= f.text_area :body, placeholder: " Post a comment", rows: 5, class: "form-control", data: {provide: "markdown"} %>
      </div>
      <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
    <div id="requests_form" class="tab-pane">
      <%= render 'responses/form' %>
    </div>
  </div>
</div>
